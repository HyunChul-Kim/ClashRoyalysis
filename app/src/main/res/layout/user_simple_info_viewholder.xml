<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/outline_bg"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <com.app.chul.clashroyalysis.view.StereoLoadingView
        android:id="@+id/simple_user_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/simple_user_clan_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vertical_guide_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/horizontal_guide_line"/>

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_guide_line"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"/>

    <TextView
        android:id="@+id/simple_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:textSize="10dp"
        android:textColor="@color/defaultColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/simple_user_info"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide_line"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/simple_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:textSize="10dp"
        android:textColor="@color/defaultColor"
        app:layout_constraintTop_toBottomOf="@id/simple_user_name"
        app:layout_constraintBottom_toBottomOf="@+id/vertical_guide_line"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide_line"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guide_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/simple_deck_line1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/vertical_guide_line"
        app:layout_constraintBottom_toTopOf="@+id/simple_deck_line2">

        <ImageView
            android:id="@+id/simple_deck_card1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/simple_deck_card2"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageView
            android:id="@+id/simple_deck_card2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/simple_deck_card1"
            app:layout_constraintRight_toLeftOf="@id/simple_deck_card3"/>

        <ImageView
            android:id="@+id/simple_deck_card3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/simple_deck_card2"
            app:layout_constraintRight_toLeftOf="@id/simple_deck_card4"/>

        <ImageView
            android:id="@+id/simple_deck_card4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/simple_deck_card3"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/simple_deck_line2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simple_deck_line1"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/simple_deck_card5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/simple_deck_card6"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageView
            android:id="@+id/simple_deck_card6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/simple_deck_card5"
            app:layout_constraintRight_toLeftOf="@id/simple_deck_card7"/>

        <ImageView
            android:id="@+id/simple_deck_card7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/simple_deck_card6"
            app:layout_constraintRight_toLeftOf="@id/simple_deck_card8"/>

        <ImageView
            android:id="@+id/simple_deck_card8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/simple_deck_card7"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>